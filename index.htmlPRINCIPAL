    <script>
        // Ocultar intro despu칠s de 8 segundos
        setTimeout(() => {
            document.getElementById('intro-frame').style.display = 'none';
            document.getElementById('main-content').style.display = 'flex';
        }, 8000);

        function mostrarSeccion(id) {
            document.getElementById("inicio").style.display = "none";
            document.getElementById("servicios").style.display = "none";
            document.getElementById("contacto").style.display = "none";
            document.getElementById("extractor-frame").style.display = "none";

            document.getElementById(id).style.display = "block";
            cerrarPanel();
        }

        function mostrarExtractor() {
            ocultarSecciones();
            const frame = document.getElementById("extractor-frame");
            frame.src = "detec/detec.html";
            frame.style.display = "block";
            cerrarPanel();
        }

        function mostrarAmix() {
            ocultarSecciones();
            const frame = document.getElementById("extractor-frame");
            frame.src = "amix/contrase침a.html";
            frame.style.display = "block";
            cerrarPanel();
        }

        function mostrarCarrucel() {
            ocultarSecciones();
            const frame = document.getElementById("extractor-frame");
            frame.src = "carrucel/circulo/ruleta.html";
            frame.style.display = "block";
            cerrarPanel();
        }

        function ocultarSecciones() {
            document.getElementById("inicio").style.display = "none";
            document.getElementById("servicios").style.display = "none";
            document.getElementById("contacto").style.display = "none";
            document.getElementById("extractor-frame").style.display = "none";
        }

        function abrirPanel() {
            document.getElementById("panel").style.left = "0";
        }

        function cerrarPanel() {
            document.getElementById("panel").style.left = "-250px";
        }
    </script>

    <!-- Bot칩n para m칰sica -->
    <button id="toggleBtn" style="font-size: 1.5rem; border: none; background: none; color: white; cursor: pointer;">游댉</button>

    <audio id="bgmusic" loop>
        <source src="mus/m1.mp3" type="audio/mpeg">
        Tu navegador no soporta audio.
    </audio>

    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const audio = document.getElementById('bgmusic');
            const btn = document.getElementById('toggleBtn');
            let reproduciendo = false;

            btn.addEventListener('click', () => {
                if (!reproduciendo) {
                    audio.play()
                        .then(() => {
                            btn.textContent = "游댆";
                            reproduciendo = true;
                        })
                        .catch(err => {
                            alert("Haz clic de nuevo para permitir la reproducci칩n.");
                            console.warn("Bloqueo de reproducci칩n autom치tica:", err);
                        });
                } else {
                    audio.pause();
                    btn.textContent = "游댉";
                    reproduciendo = false;
                }
            });
        });
    </script>



<script>
  fetch('http://localhost:3000/estado-mantenimiento')
    .then(response => response.json())
    .then(data => {
      if (data.activo) {
        window.location.href = "/Mantenimiento/index.html";
      }
    })
    .catch(error => {
      console.error('Error al verificar mantenimiento:', error);
    });
</script>


    
